<% include ../partials/header.ejs %>


<h1>Campgrounds</h1>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>This is campground page</h1>
            <p>find your favorite campground</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>            
            </p>    
        </div>
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap">
        <% campgrounds.forEach(function(camp){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= camp.image %> ">    
                
                    <div class="caption">
                        <h4><%= camp.name %></h4>
                    </div>
                    <p>
                        <a class="btn btn-primary btn-md" href="/campgrounds/<%= camp._id %>">Show Info</a>
                    </p>
                </div>
                
            </div>
        <% }); %>
    
    </div>
    
</div>
<% include ../partials/footer.ejs %>